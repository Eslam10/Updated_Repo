{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
    "parameters": {
        "VNKName": {
            "type": "string"
        },
	"location": {
		"type": "string",
		"defaultValue": "[resourceGroup().location]",
	},
        "addressPrefix": {
            "type": "string"
        },
        "subnet1Name": {
            "type": "string"
        },
        "subnet1AddressPrefix": {
            "type": "string"
        },
        "subnet2Name": {
            "type": "string"
        },
        "subnet2AddressPrefix": {
            "type": "string"
        },
        "subnet3Name": {
            "type": "string"
        },
        "subnet3AddressPrefix": {
            "type": "string"
        },
        "enableDdosProtection": {
            "type": "bool"
        }
	},
  "variables": {
    "VNName": "[parameters('VNKName')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('VNName')]",
      "apiVersion": "2018-02-01",
      "location": "[parameters('location')]",
      "properties": {
          "addressSpace": {
              "addressPrefixes": [
                  "[parameters('addressPrefix')]"
              ]
          },
          "subnets": [
              {
                  "name": "[parameters('subnet1Name')]",
                  "properties": {
                      "addressPrefix": "[parameters('subnet1AddressPrefix')]"
                  }
			  },
			  {
                  "name": "[parameters('subnet2Name')]",
                  "properties": {
                      "addressPrefix": "[parameters('subnet2AddressPrefix')]"
                  }
			  },
			  {
                  "name": "[parameters('subnet3Name')]",
                  "properties": {
                      "addressPrefix": "[parameters('subnet3AddressPrefix')]"
                  }
			   },
          ],
          "enableDdosProtection": "[parameters('enableDdosProtection')]"
      }
    }
  ],
  "outputs": {
    "VNName": {
      "type": "string",
      "value": "[variables('VNName')]"
    }
  }
}